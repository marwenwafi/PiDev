{% extends 'FiThnitek/baseBackFiThnitek.html.twig' %}
{% block container %}
    <section class="content">
    <div class="container-fluid">
    <div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Objectifs</h1>
                 </div><!-- /.row -->
             </div><!-- /.container-fluid -->
         </div>
    </div>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Titre</th>
                <th scope="col">Description</th>
                <th scope="col">Type</th>
                <th scope="col">But</th>
