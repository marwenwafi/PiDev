{% extends 'FiThnitek/baseBackFiThnitek.html.twig' %}
{% block event %}

{% endblock %}
{% block container %}

    <section class="content">
    <div class="container-fluid">
    <div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Objectifs</h1>
                 </div><!-- /.row -->
             </div><!-- /.container-fluid -->
         </div>
    </div>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Titre</th>
                <th scope="col">Description</th>
                <th scope="col">Categorie</th>
                <th scope="col">But</th>
                <th scope="col">Etat</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>

            {% for o in table %}


                <tr>
                    <th scope="col">{{ o.IdOjectif }}  </th>
                    <td>{{ o.titre }} </td>
                    <td>{{ o.description }} </td>
                    <td>{{ o.category.title }} </td>
                    <td>{{ o.but }} </td>
                    <td>{{ o.etat }} </td>
                    <td><a href="{{ path('fi_thnitek_modifyObjectif', {'id': o.IdOjectif}) }}"> <input type="button" value="Modifier"></a></td>
                    <td><a href="{{ path('fi_thnitek_deleteObjectif', {'id': o.IdOjectif}) }}"> <input type="button" value="Supprimer"></a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
    </div>
    </section>
{% endblock %}