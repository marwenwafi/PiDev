                    <td><a href="{{ path('fi_thnitek_deleteObjectif', {'id': o.IdOjectif}) }}"> <input type="button" value="Supprimer" class="btn btn-block btn-outline-primary btn-sm"></a></td>
                </tr>
            {% endfor %}
