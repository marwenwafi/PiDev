                <th scope="col">Date fin</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
            {% for o in table %}
                <tr>
                    <th scope="col">{{ o.IdOjectif }}  </th>
                    <td>{{ o.titre }} </td>
                    <td>{{ o.description }} </td>
                    <td>{{ o.type }} </td>
                    <td>{{ o.but }} </td>
                    <td>{{ o.StartDate|date("d/m/Y") }} </td>
                    <td>{{ o.EndDate|date("d/m/Y") }} </td>
