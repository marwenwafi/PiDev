{% extends 'FiThnitek/baseBackFiThnitek.html.twig' %}
{% block container %}
    <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Editer les questionnaires</h1>

                </div>
            </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="row">
            <div >
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Mes Questionnaires</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i></button>
                        </div>
                    </div>

                    <table class="table">
                        <thead>
                        <tr>

                            <th>Question</th>
                            <th>Reponse1</th>
                            <th>Reponse2</th>
                            <th>Ev√©nement</th>

                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for i in questionnaire %}

                            <tr>

                                <td>{{i.question}}</td>
                                <td>{{i.reponse1}}</td>
                                <td>{{i.reponse2}}</td>
                                <td>{{i.event}}</td>


                                <td class="text-right py-0 align-middle">
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('fi_thnitek_updateQuest',{'id':i.id }) }}" class="btn btn-info"><i class="fas fa-eye"></i></a>
                                        <a  href="{{ path('fi_thnitek_deleteQuest',{'id':i.id }) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}


                        </tbody>
                    </table>

                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </section>
    <!-- /.card -->

{% endblock %}
        {% block footer%}

{% endblock %}