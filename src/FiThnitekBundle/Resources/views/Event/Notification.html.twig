      <script>
          function rechercheOption(element,value,action){
              var i=0,li=element.childNodes.length;
              if(!action && element.value==value){//on vérifie si la valeur à cacher est celle qui est actuellement choisie
                  (element.firstElementChild||element.firstChild).selected=true; //la tournure est complexe mais elle permet de selectionner la première option tout en évitant un comportement de Firefox (qui considère que le premier enfant est le saut de ligne (à juste titre selon mon avis)) et permettre aux navigateurs ne connaissant pas firstElementChild de gérer le premier enfant
              }
              while(i<li){ //on parcours la liste des enfants de l'élément
                  if(element.childNodes[i].value==value){ //on vérifie la valeur du value
                      //on a trouvé la bonne option
                      element.childNodes[i].style.display=action?"block":"none"; //on affiche ou cache cet option en fonction de la valeur de action
                      return; //on quitte la fonction, ça ne sert à rien de rester ici puisqu'on a trouvé le bon select
                  }
                  i++;
              }
          }

          var oldValue1="1"; //valeur par défaut du premier select
          function changeSelect1(){
              var select1=document.getElementById("select1");
              var select2=document.getElementById("select2");
              rechercheOption(select2,oldValue1,true); //rétablie la valeur précédente
              oldValue1=select1.value; //permet de se souvenir de la précédente valeur
              rechercheOption(select2,oldValue1,false); //cache la valeur actuelle
          }

      </script>






