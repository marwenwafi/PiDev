{% extends 'FiThnitek/baseFrontFiThnitek.html.twig' %}
{% block container %}
    <div class="widget dashboard-container my-adslist">
    <h3 class="widget-header">Mes Reclamations</h3>
    <table class="table table-responsive product-dashboard-table">
        <thead>
        <tr>
            <th>Identifiant</th>
            <th>Type</th>
            <th>Sujet</th>
            <th class="text-center">Actions</th>

        </tr>
        </thead>
        <tbody>
    {% for c in Reclamation %}
        <tr>

            <td class="product-thumb"> <h2>{{ c.id }}</h2></td>
            <td class="product-details">
                <h2>{{ c.type }}</h2>
            </td>
            <td class="product-category">{{ c.type }}</td>
            <td class="action" data-title="Action">
                <div class="">
                    <ul class="list-inline justify-content-center">
                        <li class="list-inline-item">
                            <a data-toggle="tooltip" data-placement="top" title="view" class="view" href="{{ path('fi_thnitek_afficherreponse' , { 'id':c.id} ) }}">
                                <i class="fa fa-eye"></i>
                            </a>
                        </li>

                        <li class="list-inline-item">
                            <a class="delete" data-toggle="tooltip" data-placement="top" title="Delete" href="{{ path('fi_thnitek_supprimerreclamation' , { 'id':c.id} ) }}">
                                <i class="fa fa-trash"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </td>
            <td class="product-thumb"> <h2>{{ c.date }}</h2></td>
        </tr>
    {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}