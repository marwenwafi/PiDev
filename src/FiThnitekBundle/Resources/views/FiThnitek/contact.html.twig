{% extends 'FiThnitek/baseFrontFiThnitek.html.twig' %}
{% block container %}
    <section class="page-title">
        <!-- Container Start -->
        <div class="container">
            <div class="row">
                <div class="col-md-8 offset-md-2 text-center">
                    <!-- Title text -->
                    <h3>Contact Us</h3>
                </div>
            </div>
        </div>
        <!-- Container End -->
    </section>
    <!-- page title -->

    <!-- contact us start-->
    <section class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="contact-us-content p-4">
                        <h5>Contact Us</h5>
                        <h1 class="pt-3">Hello, what's on your mind?</h1>

                    </div>
                </div>
                <div class="col-md-6">
                    <form method="post">
                        <fieldset class="p-4">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-6 py-2">
                                       <select name="type" class="nav-link dropdown-toggle">
                                       <option value="technique">technique</option>
                                           <option value="Administratif">administratif</option>
                                           <option value="service">service</option>
                                       </select>
                                    </div>
                                    <div class="col-lg-6 py-2">
                                        <input type="text" placeholder="Sujet *" class="form-control" required name="sujet">
                                    </div>
                                </div>
                            </div>

                            <textarea name="description" id=""  placeholder="Message *" class="border w-100 p-3 mt-3 mt-lg-4"></textarea>
                            <div class="btn-grounp">
                                <button type="submit" class="btn btn-primary mt-2 float-right">Envoyer</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}