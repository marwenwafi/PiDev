{% extends 'FiThnitek/basebackFiThnitek.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">All carsharing offers </h3>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                        <tr>
                            <th>Driver Name</th>
                            <th>User Number</th>
                            <th>Destination</th>
                            <th>Departure</th>
                            <th>Date</th>
                            <th>largeur</th>
                            <th>hauteur</th>
                            <th>Longueur</th>

                            <th>price</th>

                            <th>largeur</th>
                            <th>hauteur</th>
                            <th>Longueur</th>

                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for i in r %}
                        <tr>
                            <td>{{ i.idU.username }} {{ i.idU.prenom }}</td>
                            <td>{{ i.idU.tel }}</td>
                            <td>{{ i.lieuDepart  }}</td>
                            <td>{{ i.lieuArrive }}</td>
                            <td>{{ i.dateCol }}</td>
                            <td>{{i.largeur  }}</td>
                            <td>{{i.hauteur  }}</td>
                            <td>{{i.Longueur  }}</td>
                            <td>{{ i.prix }}</td>
<form method="post">
                            <td><input type="number" min="1" name="Largeur"></td>
                            <td> <input type="number" min="1" name="Hauteur"></td>
                           <td> <input type="number" min="1" name="Longueur"></td>

    <td>
                                <a class="btn btn-block btn-outline-danger" href="{{  path('fi_thnitek_supprimerOffreback',{'id':i.idOffreCol }) }}">Delete</a>

                            </td>
                            <td>
                                <a class="btn btn-block btn-outline-success" href="{{  path('fi_thnitek_ModifierOffreback',{'id':i.idOffreCol }) }}">Update</a>

                            </td>
                            <td>
                                <button type="submit" class="btn btn-block btn-outline-success" formaction="{{  path('fi_thnitek_ajouterReservationback',{'id':i.idOffreCol }) }}">Reserver</button>

                            </td>
</form>
                        </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>


{% endblock %}
