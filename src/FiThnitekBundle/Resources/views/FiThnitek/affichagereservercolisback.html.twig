                            <td>  {{ i.idOffre.dateCol}}</td>
                            <td>  {{ i.idOffre.lieuDepart}}</td>
                            <td> {{ i.idOffre.lieuArrive}}</td>
                            <td>{{ i.idOffre.prix }}</td>
                            <td>{{ i.HauteurResv}}</td>
                            <td>{{ i.LargeurResv}}</td>
                            <td>{{ i.idUR}}</td>





                            <form method="post">

                            <td>
                                <a class="btn btn-block btn-outline-danger" href="{{  path('fi_thnitek_supprimerReservationback',{'id':i.idReservationColis }) }}">Delete</a>

                            </td>


</form>
                        </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>


{% endblock %}
