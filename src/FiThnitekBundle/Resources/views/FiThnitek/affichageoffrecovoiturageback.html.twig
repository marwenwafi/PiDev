{% extends 'FiThnitek/basebackFiThnitek.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">All carsharing offers </h3>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                        <tr>
                            <th>Driver Name</th>
                            <th>User Number</th>
                            <th>Destination</th>
                            <th>Departure</th>
                            <th>Date</th>
                            <th>Number of places</th>
                            <th>Price</th>
                            <th>Delete</th>
                            <th>Update</th>
                            <th>Reserve places</th>
                            <th>Reserve</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for i in cov %}
                        <tr>
                            <td>{{ i.idutilisateur.username }} {{ i.idutilisateur.prenom }}</td>
                            <td>{{ i.idutilisateur.tel }}</td>
                            <td>{{ i.destination  }}</td>
                            <td>{{ i.depart }}</td>
                            <td>{{ i.date }}</td>
                            <td><center>{{i.nbrplaceo  }}</center></td>
                            <td>{{ i.prix }}</td>
                            <td>
                                <a class="btn btn-block btn-outline-danger" href="{{ path('fi_thnitek_supprimercovback',{'id': i.idoffrecovoiturage }) }}">Delete</a>

                            </td>
                            <td>
                                <a class="btn btn-block btn-outline-success" href="{{ path('fi_thnitek_modifierrcovback',{'id': i.idoffrecovoiturage }) }}">Update</a>

                            </td>
                            <form method="post">
                            <td>
                                <input type="number" name="nbrrback">
                            </td>

                                <td>
                                    <button type="submit" class="btn btn-block btn-outline-info" formaction="{{ path('fi_thnitek_resevcovback',{'id': i.idoffrecovoiturage }) }}">Reserv</button>
                                </td>
                            </form>
                        </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>


{% endblock %}
