{% extends 'FiThnitek/basebackFiThnitek.html.twig' %}
{% block content %}
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Add Carsharing offer</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Departure</label>
                   <input required type="text" class="form-control" id="exampleInputPassword1" name="departureBack" placeholder="{{ cov.depart }}" value="{{ cov.depart }}">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Destination</label>
                  <input required type="text" class="form-control" id="exampleInputPassword1" name="destinationback" placeholder="{{ cov.destination }}" value="{{ cov.destination }}">

                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Date</label>
                    <input required type="date" class="form-control" id="exampleInputPassword1" placeholder="Password" name="dateeback" value="{{ cov.date }}">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Car</label>
                    <input required type="text" class="form-control" id="exampleInputPassword1" placeholder="{{ cov.voiture }}" value="{{ cov.voiture }}" name="carback">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Number of places</label>
                    <input required type="number" min="1" class="form-control" id="exampleInputPassword1"  name="nbrback" placeholder="{{ cov.nbrplaceo }}" value="{{ cov.nbrplaceo }}">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Price</label>
                    <input required type="number" min="1" class="form-control" id="exampleInputPassword1"  name="prixback" placeholder="{{ cov.prix }}" value="{{ cov.prix }}">
                </div>
                </div>


            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <!-- /.card -->
{% endblock %}
