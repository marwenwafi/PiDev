{% extends 'FiThnitek/baseFrontFiThnitek.html.twig' %}
{% block event %}
{% endblock %}
{% block container %}


    <section  >
        <div class="container">
            <form method="post">


                <!-- Post Your ad start -->
                <fieldset class="border border-gary p-4 mb-5">
                    <div class="row">
                        <div class="col-lg-12">
                            <h3>Post Your Offer</h3>
                        </div>
                        <div class="col-lg-6">
                            <h6 class="font-weight-bold pt-4 pb-1">Departure
                                :</h6>
                            <input required type="text" class="border w-100 p-2 bg-white text-capitalize" placeholder="Ad Departure" name="departure">
                            <h6 class="font-weight-bold pt-4 pb-1">Destination:</h6>
                            <input  required type="text" class="border w-100 p-2 bg-white text-capitalize" placeholder="Ad Destination" name="destination">
                            <h6 class="font-weight-bold pt-4 pb-1">Date</h6>
                            <input required type="date" class="border w-100 p-2 bg-white text-capitalize" placeholder="Ad Date" name="datee">
                            <h6 class="font-weight-bold pt-4 pb-1">Car:</h6>
                            <input required type="text" class="border w-100 p-2 bg-white text-capitalize" placeholder="Ad Car " name="car">
                            </div>

                        <div class="col-lg-6">
                            <h6 class="font-weight-bold pt-4 pb-1">number of places
                                :</h6>
                            <input type="number" min="1" max="10" required class="border w-100 p-2 bg-white text-capitalize" placeholder="Ad number of places" name="nbr">
                            <div class="price">
                                <h6 class="font-weight-bold pt-4 pb-1">Price :</h6>
                                <input  required type="number" min="1"  class="border w-100 p-2 bg-white text-capitalize" placeholder="Ad Price" name="prix">

                            </div>

                        </div>
                    </div>
                </fieldset>
                <!-- Post Your ad end -->
                <!-- submit button -->
                <button type="submit" class="btn btn-primary d-block mt-2">Post Your Ad</button>
            </form>
        </div>
    </section>

{% endblock %}