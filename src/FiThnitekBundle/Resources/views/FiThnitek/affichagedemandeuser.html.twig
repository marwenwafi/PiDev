{% extends 'FiThnitek/baseFrontFiThnitek.html.twig' %}
{% block event %}

{% endblock %}


{% block notification %}
    <li class="nav-item dropdown dropdown-slide">

        <a class="nav-link dropdown-toggle" href="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Notifications    <span class="badge badge-warning navbar-badge"> {{ b|length }}</span> <span><i class="fa fa-angle-down"></i></span>
        </a>
        <!-- Dropdown list -->
        <div class="dropdown-menu">

                <ul class="list-inline justify-content-center">
                    <li class="list-inline-item">

                        <a href="{{ path('fi_thnitek_notifdemande',{'title': 'Demande Taxi'}) }}">
                        <button type="button" class="btn btn-block btn-outline-info"> Demande Taxi <span class="badge badge-warning navbar-badge"> {{ s|length }}</span> <span><i class="fa fa-angle-down"></i></span> </button>
                    </a>

                    </li>
                </ul>
            <ul class="list-inline justify-content-center">
                <li class="list-inline-item">

                    <a href="{{ path('fi_thnitek_notifdemande',{'title': 'Modifier Demande Taxi'}) }}">
                    <button type="button" class="btn btn-block btn-outline-info"> Modifier une Demande Taxi <span class="badge badge-warning navbar-badge"> {{ mod|length }}</span> <span><i class="fa fa-angle-down"></i></span> </button>
                    </a>

                </li>
            </ul>

        </div>
    </li>
{% endblock %}
{% block container %}

    <section class="dashboard section">
        <!-- Container Start -->
        <div class="container">
            <!-- Row Start -->
            <div class="row">
                <div class="col-md-10 offset-md-1 col-lg-4 offset-lg-0">
                    <div class="sidebar">
                        <!-- User Widget -->

                        <!-- Dashboard Links -->


                        <!-- delete-account modal -->
                        <!-- delete account popup modal start-->
                        <!-- Modal -->
                        <div class="modal fade" id="deleteaccount" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                             aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header border-bottom-0">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body text-center">
                                        <img src="images/account/Account1.png" class="img-fluid mb-2" alt="">
                                        <h6 class="py-2">Are you sure you want to delete your account?</h6>
                                        <p>Do you really want to delete these records? This process cannot be undone.</p>
                                        <textarea name="message" id="" cols="40" rows="4" class="w-100 rounded"></textarea>
                                    </div>
                                    <div class="modal-footer border-top-0 mb-3 mx-5 justify-content-lg-between justify-content-center">
                                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                                        <button type="button" class="btn btn-danger">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- delete account popup modal end-->
                        <!-- delete-account modal -->

                    </div>
                </div>
                <div class="col-md-20 offset-md-10 col-lg-10 offset-lg-1">
                    <!-- Recently Favorited -->
                    <div class="widget dashboard-container my-adslist">
                        <h3 class="widget-header">Mes demandes </h3>
                        <table class="table table-responsive product-dashboard-table">
                            <thead>
                            <tr>
                                <th class="text-center"> Depart</th>
                                <th class="text-center">Destination</th>
                                <th class="text-center">Heure </th>
                                <th class="text-center">Jour </th>
                                <th class="text-center">Etat </th>
                                <th class="text-center">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for i in a %}
                            <tr>
                                <td class="product-category"><span class="categories">
                                    {{ i.lieudedepart }}</td>
                                <td class="product-category"><span class="categories">
                                    {{ i.lieudarrive }}
                                </td>
                                <td class="product-category"><span class="categories">{{ i.periode }}</span></td>
                                <td class="product-category"><span class="categories">{{ i.dateD }}</span></td>
                                <td class="product-category"><span class="categories">{{ i.etat }}</span></td>
                                <td class="action" data-title="Action">
                                    <div class="">
                                        <ul class="list-inline justify-content-center">
                                           {% if i.periode >  "now"|date("H:m")  or i.dateD > "now"|date("Y-m-d") %}
                                            <li class="list-inline-item">

                                                    <a data-toggle="tooltip" data-placement="top" title="Edit" class="edit" href="{{ path('fi_thnitek_modifierdemande',{'id': i.id }) }}">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                            </li>
                                            {% endif %}
                                            {% if i.etat == 0 %}
                                            <li class="list-inline-item">
                                                <a data-toggle="tooltip" data-placement="top" title="Delete" class="delete" href="{{ path('fi_thnitek_supprimerdemande',{'id': i.id }) }}">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </td>
                            </tr>


                            {% endfor %}

                            </tbody>
                        </table>

                    </div>

                    <!-- pagination -->
                    <div class="pagination justify-content-center">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <!-- pagination -->

                </div>
            </div>
            <!-- Row End -->
        </div>
        <!-- Container End -->
    </section>
{% endblock %}