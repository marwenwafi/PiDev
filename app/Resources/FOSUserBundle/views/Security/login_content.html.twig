{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="row justify-content-center">
    <div class="col-lg-5 col-md-8 align-item-center">
        <div class="border">
            <h3 class="bg-gray p-4">Login Now</h3>
            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <fieldset class="p-4">
                    <input type="text" placeholder="username" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="border p-3 w-100 my-2">
                    <input type="password" placeholder="Password" id="password" name="_password" required="required" autocomplete="current-password" class="border p-3 w-100 my-2">
                    <div class="loggedin-forgot">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                        <label for="remember_me" class="pt-3 pb-2">Keep me logged in</label>
                    </div>
                    <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="d-block py-3 px-5 bg-primary text-white border-0 rounded font-weight-bold mt-3">Log in</button>
                    <a class="mt-3 d-block  text-primary" href="#">Forget Password?</a>
                    <a class="mt-3 d-inline-block text-primary" href="register.html">Register Now</a>
                </fieldset>
            </form>
        </div>
    </div>
</div>